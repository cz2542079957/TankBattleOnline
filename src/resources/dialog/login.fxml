<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="Pane" prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.dialog.Login">
    <children>
        <ImageView fitHeight="240.0" fitWidth="1001.0" layoutX="189.0" layoutY="27.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../src/Other/Title.jpg" />
            </image>
        </ImageView>
        <TextField fx:id="nickName" layoutX="423.0" layoutY="322.0" style="-fx-border-radius: 200px;">
            <font>
                <Font size="20.0" />
            </font>
        </TextField>
        <Label layoutX="330.0" layoutY="323.0" prefHeight="36.0" prefWidth="93.0" text="昵称：" textFill="WHITE">
            <font>
                <Font name="HarmonyOS Sans SC Bold" size="30.0" />
            </font>
        </Label>
        <Button fx:id="buttonLogin" layoutX="558.0" layoutY="471.0" mnemonicParsing="false" onMouseClicked="#clickLogin" prefHeight="0.0" prefWidth="194.0" style="-fx-background-color: #5ebd00;" text="进入游戏">
            <font>
                <Font name="HarmonyOS Sans SC Bold" size="30.0" />
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="WHITE" />
                        <Stop color="WHITE" offset="1.0" />
                    </stops>
                </LinearGradient>
            </textFill>
        </Button>
        <Label fx:id="statusText" alignment="CENTER_RIGHT" contentDisplay="RIGHT" layoutX="22.0" layoutY="633.0" prefHeight="39.0" prefWidth="945.0" text="正在建立连接..." textAlignment="RIGHT" textFill="WHITE">
            <font>
                <Font size="30.0" />
            </font>
        </Label>
        <Button fx:id="buttonReconnect" layoutX="811.0" layoutY="575.0" mnemonicParsing="false" onMouseClicked="#clickReconnet" prefHeight="41.0" prefWidth="151.0" text="重新连接">
            <font>
                <Font name="HarmonyOS Sans SC Bold" size="24.0" />
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="1.0" startX="1.0">
                    <stops>
                        <Stop color="WHITE" />
                        <Stop color="BLACK" offset="1.0" />
                    </stops>
                </LinearGradient>
            </textFill>
        </Button>
        <Label fx:id="delay" layoutX="22.0" layoutY="27.0" text="Label" textFill="#f8f8f8" visible="false">
            <font>
                <Font name="HarmonyOS Sans SC" size="22.0" />
            </font>
        </Label>
        <Label layoutX="330.0" layoutY="398.0" prefHeight="36.0" prefWidth="93.0" text="密码：" textFill="WHITE">
            <font>
                <Font name="HarmonyOS Sans SC Bold" size="30.0" />
            </font>
        </Label>
        <TextField fx:id="password" layoutX="423.0" layoutY="397.0" style="-fx-border-radius: 200px;">
            <font>
                <Font size="20.0" />
            </font>
        </TextField>
        <Button fx:id="buttonSignin" layoutX="312.0" layoutY="471.0" mnemonicParsing="false" onMouseClicked="#clickSignin" prefHeight="0.0" prefWidth="194.0" style="-fx-background-color: #62cdfe;" text="注册">
            <font>
                <Font name="HarmonyOS Sans SC Bold" size="30.0" />
            </font>
            <textFill>
                <LinearGradient endX="1.0" endY="1.0">
                    <stops>
                        <Stop color="WHITE" />
                        <Stop color="WHITE" offset="1.0" />
                    </stops>
                </LinearGradient>
            </textFill>
        </Button>
    </children>
</AnchorPane>
